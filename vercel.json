{
  "version": 2,
  "builds": [
    {
      "src": "chatbot_server.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/chat",
      "dest": "/chatbot_server.py"
    },
    {
      "src": "/health",
      "dest": "/chatbot_server.py"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "PYTHONPATH": "./"
  }
}
